{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./types/express.d.ts",
    "./types/global.d.ts"
  ]
}
